<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>



    <!-- Toolbar view styles. -->
    <style name="toolbar_view_style">
        <item name="android:background">@drawable/toolbar_view_background</item>
        <item name="android:elevation">@dimen/toolbar_view_elevation</item>
    </style>

    <style name="toolbar_view_image_style">
        <item name="android:scaleType">centerInside</item>
        <item name="android:padding">@dimen/toolbar_view_image_padding</item>
    </style>

    <style name="toolbar_view_title_style">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">@dimen/toolbar_view_title_text_size</item>
        <item name="android:textStyle">normal</item>
        <item name="android:gravity">center_horizontal</item>
    </style>



    <!-- Privatbank exchange rates styles. -->
    <style name="item_privatbank_exchange_rates_table_row_text_style">
        <item name="android:textSize">@dimen/privatbank_exchange_rates_table_row_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="privatbank_exchange_rates_table_column_title_style">
        <item name="android:textSize">@dimen/privatbank_exchange_rates_table_column_title_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorSecondary</item>
    </style>



    <!-- Nbu exchange rates styles. -->
    <style name="item_nbu_exchange_rates_table_row_text_style">
        <item name="android:textSize">@dimen/nbu_exchange_rates_table_row_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>



    <!-- Exchange rates styles. -->
    <style name="exchange_rates_table_title_style">
        <item name="android:textSize">@dimen/exchange_rates_table_title_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="exchange_rates_date_text_style">
        <item name="android:textSize">@dimen/exchange_rates_date_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>
</resources>